// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    // No buffer screens
    "context": "Workspace && !Editor && !VimWaiting",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
      "ctrl-shift-n": "workspace::ToggleRightDock",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "space f f": "file_finder::Toggle",
      "space f g": "pane::DeploySearch",
      "space f b": "tab_switcher::Toggle",
      "space f r": "editor::OpenExcerpts",
      "space f s": "outline::Toggle",
      "space /": "workspace::NewSearch",
    },
  },
  // left panel
  {
    "context": "ProjectPanel && vim_mode == normal",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
      "ctrl-shift-n": "workspace::ToggleRightDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  // right panel
  {
    "context": "AssistantPanel && !editing && vim_mode == normal",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
      "ctrl-shift-n": "workspace::ToggleRightDock",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  {
    "context": "Terminal && vim_mode != insert",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
      "ctrl-shift-n": "workspace::ToggleRightDock",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  // editor stuff (buffer shown)
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && vim_mode !=  insert",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space f g": "pane::DeploySearch",
      "space f b": "tab_switcher::Toggle",
      "space f r": "editor::OpenExcerpts",
      "space f s": "outline::Toggle",
      "space l d": "editor::GoToDiagnostic",
      "space l a": "editor::ToggleCodeActions",
      "space /": "workspace::NewSearch",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious",
      "shift-enter": "editor::ConfirmCompletion",
    },
  },
]
